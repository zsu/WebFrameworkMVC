<!DOCTYPE html>
@using App.Common;
@using App.Mvc;
@using Web.Infrastructure.Extensions;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Util.ApplicationConfiguration.AppAcronym</title>
    @Styles.Render("~/Content/css")
    <link href="@Url.Content("~/Content/themes/redmond/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        var baseUrl = '@Url.Content("~/")';
    </script>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/log4javascript")
</head>
<body>
    <div class="wrapper">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="inner">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="" style="padding:0px 15px">
                            <span class="brand">
                                <img id="logoPrint" src="~/Content/Images/logo.jpg" alt="WebFramework" border="0" height="60" width="120">
                                <label>@Util.ApplicationConfiguration.AppFullName</label>
                            </span>
                        </div>
                    </div>
                    @RenderSection("menu", required: false)
                </div>
            </div>
        </div>
        <div class="container body-content content">
            <div id="messagewrapper" style="display: none">
                @Html.RenderMessages()
            </div>
            @RenderBody()
        </div>
    </div>
    <footer class="footer content">
        &copy; @DateTime.Now.Year - @Util.ApplicationConfiguration.Copyright
        <span class="pull-right"><span class="buildinfo">@System.Configuration.ConfigurationManager.AppSettings["SourceBranch"] @System.Configuration.ConfigurationManager.AppSettings["SourceVersion"] @System.Configuration.ConfigurationManager.AppSettings["Environment"] @File.GetLastWriteTimeUtc(ViewContext.Controller.GetType().Assembly.Location).ToClientTime("yyyy-MM-dd")</span> |@RenderSection("footerright", required: false)</span>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui") @*Modal dialog close button image bug in jquery ui, must be renderred after bootstrap*@
    @Scripts.Render("~/bundles/afterload")
    @RenderSection("scripts", required: false)
</body>
</html>
