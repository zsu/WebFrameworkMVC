@model Web.Areas.UserAccount.Models.ChangeEmailRequestInputModel
@{
    ViewBag.Title = "Change Email";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary("Error")
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>@ViewBag.Title</legend>

        @Html.EditorForModel()

        <div class="buttons">
            <button class="btn btn-info">Change Email</button>
        </div>
    </fieldset>
}

